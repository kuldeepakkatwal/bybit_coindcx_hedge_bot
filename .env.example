# Delta-Neutral Hedge Trading Bot - Environment Configuration
# Copy this file to .env and fill in your actual credentials

# ============= Bybit API Credentials =============
# Get from: https://testnet.bybit.com (testnet) or https://bybit.com (mainnet)
BYBIT_API_KEY=xxx
BYBIT_API_SECRET=xxx
BYBIT_TESTNET=true  # Set to 'false' for mainnet

# ============= CoinDCX API Credentials =============
# Get from: https://coindcx.com/trade/api
COINDCX_API_KEY=xxx
COINDCX_API_SECRET=xxxx

# ============= PostgreSQL Database (Optional) =============
# Bot can run without database, but order history won't be saved
DB_HOST=localhost
DB_PORT=5432
DB_NAME=hedge_trading
DB_USER=postgres
DB_PASSWORD=your_db_password_here

# ============= Redis Configuration =============
# Used by LTP_fetch for price data (should already be configured)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ============= Logging =============
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR
